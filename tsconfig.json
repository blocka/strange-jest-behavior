{
	"compilerOptions": {
		"strict": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"lib": [
			"dom",
			"es5",
			"es2015.promise",
			"es2017",
			"es6"
		],
		"module": "es2015",
		"moduleResolution": "node",
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"jsx": "preserve",
		"jsxFactory": "h"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
